<%- include('../partials/header', {message: message}) %>
<script src="https://cdn.ckeditor.com/4.15.0/standard/ckeditor.js" onload="true"></script>

<body id="page-top">
  <div id="wrapper">
    <%- include('../partials/slidebar') %>
    <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">
        <%- include('../partials/navbar', { result: user}) %>

        <!-- Begin Page Content -->
        <div class="container">
          <div class="content grid-width-100 text-center">
            <h1><%= message %>!</h1>
            <p>
              (If) Add a simple line (By content Writer).
            </p>
          </div>

          <form action="/admin/manage/forum/<%= result._id %>/edit?_method=PUT" method="POST">
            <div class="form-group">
              <label for="exampleFormControlInput1">Page Title</label>
              <input type="text" name="title" class="form-control" id="exampleFormControlInput1"
                placeholder="Enter Page Title" value="<%= result.title %>">
            </div>

            <div class="form-group">
              <label for="exampleFormControlTextarea1">Page Content</label>
              <textarea class="ckeditor form-control" id="exampleFormControlTextarea1" name="content"
                rows="18"> <%- result.content %> </textarea>
            </div>

            <div class="form-group">
              <button type="submit" class="btn btn-primary">Update Forum</button>
              <a href="/admin/manage/forum" class="btn btn-outline-primary">Cancel</a>
            </div>
          </form>

        </div>
      </div>

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy; Your Website 2020</span>
          </div>
        </div>
      </footer>
    </div>
  </div>

  <%- include('../partials/logout') %>
  <%- include ('../partials/footer') %>